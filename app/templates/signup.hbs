{{partial 'head'}}
{{#if showLogin}}
<br>
<br>
        
<div class="container" style="background-color:lightgrey; text-align:center; width:25%;">
   <b><i>Sign up</i></b>
   <br>
   First Name
   {{validated-input  type="text" model=this  valuePath='firstname' placeholder="firstname" required=""}}
   Last Name
   {{validated-input  type="text" model=this  valuePath='lastname' placeholder="lastname" required=""}}
   Mobile Number
   {{validated-input  type="number" model=this  valuePath='mobilenumber' placeholder="number" required=""}}  
   D.O.B
   <br>
  {{bootstrap-datepicker  id="date" value=DateOfBirth format="dd.mm.yy" placeholder="DOB"}}
   <br>
   {{!-- {{validated-input  type="" model=this  valuePath='DateOfBirth' placeholder="D.O.B" required=""}}  --}}
   Email id 
   {{validated-input  type="email" model=this  valuePath='email' placeholder="E-mail" required="true"}}
   Password
   {{validated-input  type="password" model=this  valuePath='password' placeholder="password" required=""}}
   Re-type password
   {{validated-input  type="password" model=this  valuePath='password2' placeholder="Retype password" required=""}}
   <br>
   <button type="button" id="myButton" class="btn btn-primary" {{action "signup"}}>sign up</button>
   <br>
           {{#if showDialog}}
  {{#paper-dialog class="flex-77" onClose=(action "closeDialog" "cancel") origin=dialogOrigin clickOutsideToClose=true}}
    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}
      Your sucessfully logged in!!!
        {{#paper-button iconButton=true onClick=(action "closeDialog" "cancel")}}{{paper-icon icon="close"}}{{/paper-button}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}

   
    {{#paper-dialog-actions class="layout-row"}}
      {{#paper-button onClick=(action "closeDialog" "cancel")}}Cancel{{/paper-button}}
      {{#paper-button onClick=(action "okay" "ok")}}OK{{/paper-button}}
    {{/paper-dialog-actions}}
  {{/paper-dialog}}
{{/if}}
   <br>
</div>
<br>
<br>
{{/if}}