      {{!-- r2 --}}
      {{!-- r3 --}}
      <div class="row">
         <div class= "col-xs-6 col-lg-6 col-md-6 col-sm-6 ">  
            <button type="button" class="btn btn-primary btn-block" disabled={{legalButton}} {{action "reject" lastdetails record.Key creditscore}}>Reject</button>
           
         </div>
         <div class= "col-xs-6 col-lg-6 col-md-6 col-sm-6 ">  
            <button type="button" class="btn btn-primary btn-block" disabled={{legalButton}} {{action "approved"lastdetails record.Key creditscore }}>Approve</button>
         
         </div>
         <br>
             {{!-- <h3>Time Stamp</h3> --}}
