{{partial 'head'}}
{{#if showLogin}}
{{/if}}
<div class="container-fluid">
   <br>
   <script>
      $(document).ready(function() {
          // Show or hide the sticky footer button
          $(window).scroll(function() {
              if ($(this).scrollTop() > 200) {
                  $('.go-top').fadeIn(200);
              } else {
                  $('.go-top').fadeOut(200);
              }
          });
          // Animate the scroll to top
          $('.go-top').click(function(event) {
              event.preventDefault();
              $('html, body').animate({
                  scrollTop: 0
              }, 300);
          });
         
      });
   </script>
 
   <div class="container" >
       <br>
       <br>
         <h4 style="text-align:center;"><em>USER DETAILS VERIFICATION</em></h4>
       {{#if IsUserDetails}}
   <div class="alert alert-success">
      <strong>Successfully creditscore generated!</strong><br>
      Please Also Get Verified By Legal Validator
   </div>
   {{/if}}
   {{#if IsUserDetailsApproves}}
