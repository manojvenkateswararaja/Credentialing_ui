            {{#paper-button onClick=(action "okay1" "ok")}}OK{{/paper-button}}
            {{/paper-dialog-actions}}
            {{/paper-dialog}}
            {{/if}}
         </div>
         <div style=" margin-top:1cm;">
            <button type="button" class="btn btn-primary btn-block"  disabled={{isApprove}} {{action "LoanApprove" record details}}> Approve Loan </button>
