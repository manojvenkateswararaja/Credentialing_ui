{{partial 'head'}}
{{#if showLogin}}
{{/if}}
<div class="container-fluid">
   <br>
   <script>
      $(document).ready(function() {
          // Show or hide the sticky footer button
          $(window).scroll(function() {
              if ($(this).scrollTop() > 200) {
                  $('.go-top').fadeIn(200);
              } else {
                  $('.go-top').fadeOut(200);
              }
          });
          // Animate the scroll to top
          $('.go-top').click(function(event) {
              event.preventDefault();
              $('html, body').animate({
                  scrollTop: 0
              }, 300);
          });
         
      });
   </script>
   {{#if IsUserDetails}}
   <div class="alert alert-success">
      <strong>Successfully creditscore generated!</strong><br>
      Please Also Get Verified By Legal Validator
   </div>
   {{/if}}
   {{#if IsUserDetailsApproves}}
   <div class="alert alert-success">
      <strong>Legal Verification Successfully Done !</strong><br>
      Proceed Further For Approve Or Reject
   </div>
   {{/if}}
   {{#if IsAlreadyDone}}
   <div class="alert alert-info">
      <strong>Info!</strong>Already made decision.
   </div>
   {{/if}}
   <div class="container" >
      <h2 style="margin-left:12cm;"><b>USER REQUESTID</b></h2>
      <div class="row" style="">
