         <tr>
            <td> <a href="" {{action 'userloanschedule'  item }}><b style="color:blue">{{item.Records.requestid}} </b></a></td>
            <td> <small  class="text-muted">{{item.Records.date}}</small></td>
            <td> <small  class="text-muted">{{item.Records.time}}</small></td>
            <td> <b style="color:green">{{#if isBankPreclose}}{{status}}{{/if}}</b>
               <b style="color:green">{{item.Records.statusForUser}}
               {{item.Records.statusForBankLegal}}
               {{item.Records.statusForCreditRequest}}
               {{item.Records.statuspreclose}}
               {{item.Records.userpreclosestatus}}
