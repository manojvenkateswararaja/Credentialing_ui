{{#if showLogin}}
{{/if}}
   <div class="container-fluid" style="background-color:">
      <br>
<br>
<br>
<br>
      <div class="row">
         <div class="col-xs-3 col-lg-3 col-sm-3">
            <b>
               <em>
                  <span class="glyphicon glyphicon-tasks"></span> 
                  <div class="col-xs-1 col-lg-1 col-sm-1"></div>
                  My Account
               </em>
            </b>
         </div>
         <div class="col-xs-4 col-lg-4 col-sm-4"></div>
         <div class="col-xs-4 col-lg-4 col-sm-4"  {{action 'steps'}}><span class="glyphicon glyphicon-hand-right" style=""></span><em class="text-muted"> you can also preclose loan, click here to know steps</em>
