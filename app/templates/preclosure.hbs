{{partial 'head'}}
{{#if showPreclosure}}
<div class="container-fluid">
   <br>
   <br>
   <div class="container">
      <form>
         <div style="text-align:center;"><b>Pre-Closing</b></div>
         <br>
         {{!-- style="background-color:red"
         class="form-control" --}}
         <div class="row" >
        <div class="col-xs-6 col-lg-6 col-sm-6" >EMI Remaining</div>
        <div class="col-xs-6 col-lg-6 col-sm-6">
        <input type="number"  id="exampleInputEmail1" valuePath='EMI' placeholder="number of emi" required="">
                </div>
                </div><br>
            <div class="row" >
            <div class="col-xs-6 col-lg-6 col-sm-6">Penality for Preclose</div>
            <div class="col-xs-6 col-lg-6 col-sm-6">
            <input type="number" id="exampleInputEmail1" valuePath='penality' placeholder="penality">
            </div>
            </div><br>
             <div class="row">
                <div class="col-xs-6 col-lg-6 col-sm-6">Installment Per month</div>
               <div class="col-xs-6 col-lg-6 col-sm-6"> 
                     <input type="number"  id="exampleInputEmail1" valuePath='installment' placeholder="installment per month">
                     </div> 
                     </div><br>
                     <div class="row">
                   <div class="col-xs-6 col-lg-6 col-sm-6">Document Required for Closing</div>
                     <div class="col-xs-6 col-lg-6 col-sm-6">
                            {{#pl-uploader  for="upload_file5" runtimes="html5 flash silverlight" onfileadd="uploadDoc" as |queue|}}
            <a id="upload_file6" style="font-size:18px">
               <p style="margin-top:3mm"> <img src="assets/images/upload.svg" alt="Smiley face" width="20" height="20" style="margin-bottom:3mm">&nbsp; Choose File to Upload</p>
            </a>
            {{/pl-uploader}}   
                     </div>
                   </div><br>
                    <div class="row">
                    <div class="col-xs-6 col-lg-6 col-sm-6">Payment Mode</div>
                    <div class="col-xs-6 col-lg-6 col-sm-6"> {{select-component listitem=PaymentMode selecteditemlist=Payment}}</div>
                    </div><br>
                <div class="row"> 
         <button type="button" id="myButton" class="btn btn-primary" style="margin-left: 42%;width: 20%;margin-bottom: -70px;" {{action }}>Apply</button>
         </div>
         <br>
         <br>
         <br>
      </form>
   </div>
</div>
{{/if}}
