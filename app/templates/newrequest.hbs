
<div class="square">
  <header >    
   <h2><b><i>APPLICATION OR REQUEST</i></b></h2> 
    </header>
    <br>
    <div class="container">
   <section>
      <h3><i><u>Personal Details</u></i></h3>
   </section>
  <br> FirstName  <br>
    {{validated-input  type="text" model=this  valuePath='firstname' placeholder="firstname" required=""}}
    <br>LastName  <br>
   {{validated-input  type="text" model=this  valuePath='lastname' placeholder="lastname" required=""}}
   <br>gender<br>
   <div>
      {{select-component listitem=genderlist selecteditemlist=genderType}}
     </div>
     <br>nationality<br>
     <div>
       {{select-component listitem=nationalitylist selecteditemlist=nationalityType}}
       </div>
    <br>Primary Phone<br>
   {{validated-input  type="number" model=this  valuePath='number' placeholder="contact" required=""}}
    <br>
     <br>Email Address <br> 
   <div>
     {{validated-input  type="email" model=this  valuePath='email' placeholder="Enter email" required=""}}
      {{!--{{input  type="email" spellcheck=true  value=email maxlength="255" placeholder="email"}}--}}
   </div>
   <br>purpose of mortgage type<br>
   <div>
      {{select-component listitem=mortgaugeTypeList selecteditemlist=mortgaugeType}}
   </div>
    <br> Loan Amount<br>  
     {{validated-input  type="number" model=this  valuePath='Amount' placeholder="Amount" required=""}}
   <br>Type of Property <br> 
   <div>
      {{select-component listitem=mylist selecteditemlist=propertyType}}
   </div>
     <br>Estimated Price or Value of Property<br>
      {{validated-input  type="number" model=this  valuePath='price' placeholder="price" required=""}} 
    {{!--${{input  type="text" value=price}} --}}
    <br> Location of Property 
   <div>
        <br>Street Address<br>  
         {{validated-input  type="location" model=this  valuePath='location' placeholder="location" required=""}}
       <br> country <br>
        {{validated-input  type="text" model=this  valuePath='country' placeholder="country" required=""}}
   </div>
    
    <br>Down Payment Percentage  <br>
      {{select-component listitem=downPaymentList selecteditemlist=paymentPercentage}}
   
   
   <br>Current Mortgage Company<br>
   <div>
      {{select-component listitem=CompanytList selecteditemlist=Company }}
   </div>
    <br> Age  <br>
   <div>
      {{validated-input  type="number" model=this  valuePath='Age' placeholder="age" required=""}}
      {{!--{{input  type="number"  value=Age  placeholder="age"}}--}}
   </div>
     <br>Occupation  <br>
   <div>
     {{validated-input  type="text" model=this  valuePath='occupation' placeholder="Enter your occupation" required=""}}
      {{!--{{input  type="text"  value=occupation  placeholder="occupation"}}--}}
   </div>
     <br>How long have you been at your current job?  <br>
   <div>
  {{select-component listitem=jobOption selecteditemlist=Choice}}
   </div>
         <br> Household Income <br>
    {{validated-input  type="number" model=this min="0" max="200" valuePath='income' placeholder="" required=""}}
   {{!--{{input   type="text" class="field text currency nospin" value=income size="10" placeholder="" }}--}}
   {{!--{{input    type="text" name="firstname" value=firstname  placeholder="firstname"}}--}}
   {{!--{{input  type="text" name="lastname" value=lastname  placeholder="lastname"}}--}}
   {{!--{{input  type="tel" name="number" value=number placeholder="Phone number"}}--}}
   <br><button {{action "next" }} >next</button><br>
</div>
</div>