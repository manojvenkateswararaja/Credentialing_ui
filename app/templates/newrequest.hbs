{{partial 'head'}}
{{#if showRequest}}
<div class="container-fluid" style="">
   <div id="mySidenav" class="sidenav" >
      <a href="javascript:void(0)" class="closebtn" {{action "closeNav"}}>&times;</a>
      <a >Home</a>
      <a {{action "goTonewrequest"}}>Personal details</a>
      <a {{action "goToloan"}}>Loan details</a>
      <a {{action "goToproperty"}}>Property details</a>
      <a {{action "goToemployment"}}>Employment details</a>
   </div>
   <div class="container">
      {{#paper-stepper   currentStep=currentStep onStepChange=(action (mut currentStep))
      onStepperCompleted=(action "saveModel") as |stepper|}}
      {{#stepper.step label="Personal Details" as |step|}}
      <div class="container" style="margin-left:442px; background-color:lightgrey">
         {{#step.body}}
         {{#paper-grid-list
         cols="1 md-2 gt-md-6"
         rowHeight="gt-md-1:1 2:2"
         gutter="12px gt-sm-8px" as |grid|}} 
         <h2 style="margin-top:-30px !important;padding-top: 0px;margin-left:0"><i>Tell us about your Personal details</i></h2>
         <p style="background-color:;margin-top:-29px; margin-left:2px;">
            <br>
            <br>
            {{paper-input label="Firstname" value=fname onChange=(action (mut fname)) icon="person"}}
            {{paper-input label="Last name" value=lname onChange=(action (mut lname)) icon="person"}}
            {{paper-input label="Age" type="number" value=age
            icon="person" onChange=(action (mut age))  }}
            <br>
            {{paper-input label="Phone number" type="number" 
            value=phone onChange=(action (mut phone)) icon="phone" maxlength="10"}}
            {{paper-input label="E-mail" type="email" value=email onChange=(action (mut email))  required=true
            icon="email"  customValidations=emailValidation}}
            {{paper-input label="Occupation"  value=occupation   icon="work" onChange=(action (mut occupation))  }}
            <br>
            <br>
            {{paper-input label="Address"  value=address icon="streetview" onChange=(action (mut address))  }}
            {{paper-input label="Country"  value=country icon="add location" onChange=(action (mut country))  }}
            <br>
            Gender
         <div class="drop1" style="margin-left:300px; margin-top:-28px">
            {{select-component listitem=genderlist selecteditemlist=genderType}}
         </div>
         <br>
         <br>
         Nationality 
         <div class="drop2" style="margin-left:299px; margin-top:-28px">
            {{select-component listitem=nationalitylist selecteditemlist=nationalityType}}
         </div>
         <br>
         </p>
         {{/paper-grid-list}}
         {{/step.body}}
      </div>
      {{#step.actions as |nextStep previousStep|}}
      {{#paper-button primary=true raised=true onClick=(action nextStep)}}
      next
      {{/paper-button}}
      {{#paper-button onClick=(action previousStep)}}
      Back
      {{/paper-button}}
      {{/step.actions}}
      {{/stepper.step}}
      {{!-- add as many steps as necessary --}}
      {{#stepper.step label="Mortgage Details" as |step|}}
      <div class="container" style="margin-left:442px; margin-top:-1cm; background-color:lightgrey">
         {{#step.body}} 
         {{#paper-grid-list
         cols="1 md-2 gt-md-6"
         rowHeight="gt-md-1:1 2:2"
         gutter="12px gt-sm-8px" as |grid|}} 
         <h2 style="margin-top:-30px !important;;padding-top: 0px;margin-left:0"><i>Tell us what your looking for?</i></h2>
         <br>
         <br>
         <br>
         <div style="background-color;margin-top:-82px;padding-top: 64px;">
            {{paper-input label="Purpose of loan" value=loan onChange=(action (mut loan)) icon="account balance" }}
            {{paper-input label="Required amount" value=amount onChange=(action (mut amount)) icon="attach money" }}
            <br>
           Asset type
            <div class="drop2" style="margin-left:299px; margin-top:-28px"> 
               {{select-component listitem=mylist selecteditemlist=propertyType}}
            </div>
            <br>
            {{!-- {{#paper-button raised=true warn=true onClick=(action "targetButton")}}Submit{{/paper-button}} --}}
         </div>
         {{/paper-grid-list}}
         <br>
         <br>
         <br>
         <br>
         {{/step.body}}
      </div>
      {{#step.actions as |nextStep previousStep|}}
      {{#paper-button primary=true raised=true onClick=(action nextStep)}}
      next
      {{/paper-button}}
      {{#paper-button onClick=(action previousStep)}}
      Back
      {{/paper-button}}
      {{/step.actions}}
      {{/stepper.step}}
      {{#stepper.step label="Property Details" as |step|}}
      <div class="container" style="margin-left:442px; margin-top:-1cm; background-color:lightgrey">
         {{#step.body}}
         {{#paper-grid-list
         cols="1 md-2 gt-md-6"
         rowHeight="gt-md-1:1 2:2"
         gutter="12px gt-sm-8px" as |grid|}}   
         <h2 style="margin-top:-30px !important;;padding-top: 0px;margin-left:0">Tell us about your property</h2>
         <p style="background-color:;margin-top:-20px">
            <br>
            <br>
            <br>
            {{paper-input label="Year purchased" type="date" value=year onChange=(action (mut year)) icon="date range" }}
            <br>
            {{paper-input label="Loaction/Address"  value=location onChange=(action (mut location)) icon="location on" }}
            {{paper-input label="Property size"  value=size onChange=(action (mut size)) icon="home"}}  
            <br>
            {{!-- {{#paper-button raised=true warn=true onClick=(action "targetButton")}}Submit{{/paper-button}} --}}
         </p>
         {{/paper-grid-list}}
         <br>
         <br>
         <br>
         {{/step.body}}
      </div>
      {{#step.actions as |nextStep previousStep|}}
      {{#paper-button primary=true raised=true onClick=(action nextStep)}}
      next
      {{/paper-button}}
      {{#paper-button onClick=(action previousStep)}}
      Back
      {{/paper-button}}
      {{/step.actions}}
      {{/stepper.step}}
      {{!-- page4 --}}
      {{#stepper.step label="Employement Details" as |step|}}
      <div class="container" style="margin-left:442px;margin-top:-2cm; background-color:lightgrey">
         {{#step.body}} 
         {{#paper-grid-list
         cols="1 md-2 gt-md-6"
         rowHeight="gt-md-1:1 2:2"
         gutter="12px gt-sm-8px" as |grid|}}  
         <h2 style="margin-top:30px !important;;padding-top: 0px;margin-left:0">Tell us about your Employment details</h2>
         <p style="background-color:;margin-top:-20px">
            <br>
            <br>
            <br>
            {{paper-input label="Income" value=rupees type="number" onChange=(action (mut rupees)) icon="attach money" }}
            {{paper-input label="Company name" value=company  onChange=(action (mut company)) icon="work"}}
            <br>
            {{paper-input label="Joining date" type="date" value=joining onChange=(action (mut joining)) icon="work"}}
            {{paper-input label="Gross fixed salary" type="number" value=salary onChange=(action (mut salary)) icon="work" }}
            <br>
            {{#paper-button raised=true warn=true onClick=(action "targetButton")}}Submit{{/paper-button}}
         </p>
         {{#if showDialog}}
         {{#paper-dialog class="flex-77" onClose=(action "closeDialog" "cancel") origin=dialogOrigin clickOutsideToClose=true}}
         {{#paper-toolbar}}
         {{#paper-toolbar-tools}}
         {{message}}
         your request id:{{reqid}}
         {{#paper-button iconButton=true onClick=(action "closeDialog" "cancel")}}{{paper-icon icon="close"}}{{/paper-button}}
         {{/paper-toolbar-tools}}
         {{/paper-toolbar}}
         {{#paper-dialog-actions class="layout-row"}}
         {{#paper-button onClick=(action "closeDialog" "cancel")}}Cancel{{/paper-button}}
         {{#paper-button onClick=(action "okay" "ok")}}OK{{/paper-button}}
         {{/paper-dialog-actions}}
         {{/paper-dialog}}
         {{/if}}
         {{/paper-grid-list}}
         <br>
         <br>
         <br>
         {{/step.body}}
      </div>
      {{/stepper.step}}
      {{/paper-stepper}}
   </div>
</div>

{{/if}}