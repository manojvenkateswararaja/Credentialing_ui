{{partial 'head'}}
{{#if showLogin}}

{{/if}}
<div class="container-fluid">
   <br>
   <small style="margin-left:-9cm">Remember:<u>click on requestid to check response</u></small>
   <header class="w3-container  w3-center" style="padding:70px 16px">
      
      {{#if ShowRequest}}
      {{#each showrecords   as |item|}}
      <div class="row" style="background-color:lightgrey">
         <div class="col-xs-3 col-lg-3 col-sm-3">Requestid<a href="" {{action 'userloan'  item }}><b style="color:blue">{{item.Key}}   
            </b>
            </a>
         </div>
         <div class="col-xs-2 col-lg-2 col-md-2 col-sm-2" style="background-color:">
            <div class="vl5">
               <div>Name:{{item.Record.fname}}
               </div>
            </div>
         </div>
         <div class="col-xs-2 col-lg-2 col-md-2 col-sm-2" style="background-color:">
            <div class="vl5">
               <div style="">Property:{{item.Record.propertyType}}</div>
            </div>
         </div>
         <div class="col-xs-2 col-lg-2 col-md-2 col-sm-2" style="background-color:">
            <div class="vl5">
               <div style="">Amount:{{item.Record.amount}}</div>
            </div>
         </div>
         <div class="col-xs-6 col-lg-6 col-md-6 col-sm-6" style="background-color:">
            <div class="vl5">
               <div style="">status:<b style="color:green">{{#if isBankPreclose}}{{status}}{{/if}}</b>
                  <b style="color:green">{{item.Record.statusForUser}}{{item.Record.statusForBankLegal}}{{item.Record.statusForCreditRequest}}
                  {{item.Record.statuspreclose}}
                  {{item.Record.userpreclosestatus}}
                  </b>
               </div>
            </div>
         </div>
      </div>
      <br>
      {{/each}}
      {{/if}}
      {{!-- end --}}
      <h1 class="w3-margin w3-jumbo">Welcome To Mortgage Loan</h1>
      <p class="w3-xlarge">Mortgage process</p>
      <button type="button" id="myButton"  class="btn btn-primary" {{action "gotoApply"}}>Apply New Request</button>
   </header>
