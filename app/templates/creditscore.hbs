{{partial 'head'}}
{{#if showCreditscore}}
{{/if}}
<div class="container-fluid">
   
      <h2><b style="text-align:center;">CREDIT SCORE</b></h2>

<div class="container">
   <br/>
    <div class="row">
       <div class="col-xs-5 col-lg-5 col-md-5 col-sm-5">
      Request id:<b style="color:blue">{{record.Key}}</b>
      </div>
       <div class="col-xs-6 col-lg-6 col-md-6 col-sm-6">
         Current Status:{{#if isDisplayed}}<b style="color:green">{{GetRecord.statusForCreditRequest}}</b> {{/if}}
         {{#if isDisplayed}}<b style="color:green">{{ApproveCreditRequest}}</b>{{/if}}

       </div>
</div>
<br>
<br>
      
         <style>
            table, th, {
            border-width: thin;
            }
         </style>
        
         <div class="row">
            <div class="col-xs-6 col-lg-6 col-md-6 col-sm-6" style="background-color:grey;">Personal information</div>
            <div class="col-xs-6 col-lg-6 col-md-6 col-sm-6" style="background-color:grey;">Property information</div>
         </div>
         <br> 
         <div class="row">
            <div class="col-xs-6 col-lg-6 col-md-6 col-sm-6">
           
               <table>
                  <tr>
                     <td>First name:</td>
                     <td style="color:gray;">{{transactiondetails.fname}}</td>
                  </tr>
                  <tr>
                     <td>Last name:</td>
                     <td style="color:gray;">{{transactiondetails.lname}}</td>
                  </tr>
                  <tr>
                     <td>Contact number:</td>
                     <td style="color:gray;">{{transactiondetails.phone}}</td>
                  </tr>
                  <tr>
                     <td>Country:</td>
                     <td style="color:gray;">{{transactiondetails.country}}</td>
                  </tr>
                  <tr>
                     <td>Occupation:</td>
                     <td style="color:gray;">{{transactiondetails.occupation}}</td>
                  </tr>
                  <tr>
                     <td>Income:</td>
                     <td style="color:gray;">{{transactiondetails.income}}</td>
                  </tr>
               </table>
              
            </div>
            <div class= "col-xs-6 col-lg-6 col-md-6 col-sm-6 ">  
               <table>
                  <tr>
                     <td>Mortgage type</td>
                     <td style="color:gray;">{{transactiondetails.propertyType}}</td>
                  </tr>
                  <tr>
                     <td>Need amount:</td>
                     <td style="color:gray;">{{transactiondetails.amount}}</td>
                  </tr>
                  <tr>
                     <td>Location</td>
                     <td style="color:gray;">{{transactiondetails.location}}</td>
                  </tr>
                 
                  <tr>
                     <td>Country:</td>
                     <td style="color:gray;">{{transactiondetails.country}}</td>
                  </tr>
               
                  <tr>
                 <td>Credit score:</td>
                 <td style="color:black;">{{creditscore}}</td>
             </tr>
               </table>
          
            </div>
         </div>
         <table>
             
         </table>
         
           <br>
           <br>
             <div class="row">
                  <div class= "col-xs-6 col-lg-6 col-md-6 col-sm-6 ">  
           <button type="button" class="btn btn-primary btn-block"{{action "ApproveUpdate" transactiondetails record.Key creditscore}}>Creditscore Approve</button>
            {{!-- <button type="button" id="myButton" class="btn btn-primary" {{action "ApproveUpdate" details record.Key creditscore}}>Approve</button> --}}
         
          </div>
         <div class= "col-xs-6 col-lg-6 col-md-6 col-sm-6 ">  
                <button type="button" class="btn btn-primary btn-block"{{action "creditscore" record.Key}}>Generate Creditscore </button>
            {{!-- <button type="button" id="myButton" class="btn btn-primary" {{action "creditscore" record.Key}}>CreditScore</button> --}}
         </div>
         </div>
          <div style="background-color:lightgrey;">
             <h3>Time Stamp</h3>
             {{#if isCreditGen}}
             <div class="row">
           <b>  Creditscore Generation Time</b>
            </div>
          <div class="row">
            <div class="col-xs-6 col-lg-6 col-sm-6">
            Date:{{date}}
            </div>
             <div class="col-xs-6 col-lg-6 col-sm-6">
            Time{{time}}
            </div>
        
        
       </div>
       <br>
       <br>
       {{/if}}
       </div>
         {{!-- <div>
        <h3>STATUS</h3>
        <table>
          <tr>
            UserRequest
          </tr>
          <tr>
            Date<td>{{date}}</td>
            </tr>
            <tr>Time<td>{{time}}</td></tr>
        </table>
      </div> --}}
         {{#if showDialog}}
  {{#paper-dialog class="flex-77" onClose=(action "closeDialog" "cancel") origin=dialogOrigin clickOutsideToClose=true}}
    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}
        Your creditscore has been sent to bank...!!
        {{#paper-button iconButton=true onClick=(action "closeDialog" "cancel")}}{{paper-icon icon="close"}}{{/paper-button}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}

   
    {{#paper-dialog-actions class="layout-row"}}
      {{#paper-button onClick=(action "closeDialog" "cancel")}}Cancel{{/paper-button}}
      {{#paper-button onClick=(action "okay" "ok")}}OK{{/paper-button}}
    {{/paper-dialog-actions}}
  {{/paper-dialog}}
{{/if}}
         <br>
         <br>
      

  </div>
  </div>

